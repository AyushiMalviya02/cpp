#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;

    if (n <= 0) {
        cout << "Not a perfect number";
        return 0;
    }

    int sum = 0;

    // Loop from 1 to n/2 to find proper divisors
    for (int i = 1; i <= n / 2; i++) {
        if (n % i == 0)
            sum += i;
    }

    if (sum == n)
        cout << n << " is a Perfect number";
    else
        cout << n << " is not a Perfect number";

    return 0;
}
