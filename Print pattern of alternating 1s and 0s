#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of rows: ";
    cin >> n;

    for (int i = 1; i <= n; i++) {
        int val = i % 2;  // start with 1 if row is odd, 0 if even
        for (int j = 1; j <= i; j++) {
            cout << val << " ";
            val = 1 - val;  // alternate between 1 and 0
        }
        cout << endl;
    }

    return 0;
}
