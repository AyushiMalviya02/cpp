#include <iostream>
#include <cmath>
using namespace std;

int main() {
    long long binary;
    cout << "Enter a binary number: ";
    cin >> binary;

    long long decimal = 0;
    int i = 0; // Position index

    while (binary > 0) {
        int lastDigit = binary % 10; // Get last digit
        if (lastDigit != 0 && lastDigit != 1) {
            cout << "Invalid binary number!" << endl;
            return 1;
        }
        decimal += lastDigit * pow(2, i); // Add to decimal value
        binary /= 10; // Remove last digit
        i++;
    }

    cout << "Decimal equivalent: " << decimal << endl;
    return 0;
}
