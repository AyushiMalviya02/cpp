#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number of rows: ";
    cin >> n;

    for (int i = n; i >= 1; i--) {       // rows
        for (int j = 1; j <= i; j++) {   // stars in each row
            cout << "* ";
        }
        cout << endl;
    }

    return 0;
}
