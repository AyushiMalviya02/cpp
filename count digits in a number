#include <iostream>
using namespace std;

int main() {
    long long n;
    cout << "Enter a number: ";
    cin >> n;

    n = abs(n);   // Handle negative numbers

    int count = 0;

    if (n == 0) {
        count = 1;   // Special case for 0
    } else {
        while (n > 0) {
            n /= 10;
            count++;
        }
    }

    cout << "Number of digits: " << count;

    return 0;
}
