#include <iostream>
using namespace std;

int main() {
    long long n;
    cout << "Enter a number: ";
    cin >> n;

    long long sum = 0;

    while (n != 0) {
        sum += n % 10;   // get last digit
        n /= 10;         // remove last digit
    }

    cout << "Sum of digits: " << sum;

    return 0;
}
